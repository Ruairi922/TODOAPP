<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.todoapp.HelloController">

    <center>
        <ListView fx:id="todoListView">
            <VBox>
                <!-- Placeholder for to-do items -->
            </VBox>
        </ListView>
    </center>
    <bottom>
        <HBox spacing="10">
            <TextField fx:id="taskTextField" promptText="Add a new task..." />
            <Button text="Add" onAction="#addTask" />
            <Button text="Remove" onAction="#removeTask" />
        </HBox>
    </bottom>
</BorderPane>